
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}

<div class="container"style="background-color:white;">
    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Đăng nhập</h2>
                        <form action="Login"method="post">
                            <input type="text" placeholder="ID" required="true" value='@ViewData["userID"]' name="userID" />
                            <input type="password" placeholder="pass" required="true" value='@ViewData["password"]' name="password"/>
                            <span>
                                <input type="checkbox" class="checkbox">
                                Keep me signed in
                            </span>
                            <button type="submit" class="btn btn-default">Login</button>
                            <span class="alert-danger">@ViewData["thong bao"]</span>
                        </form>
                    </div><!--/login form-->
                </div>
                <div class="col-sm-1">
                    <h2 class="or">OR</h2>
                </div>
                <div class="col-sm-4">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>Tạo tài khoản mới !</h2>
                        <form method="post" action="Signup" id="formSignup">
                            <span class="alert-danger">@ViewData["Thông báo"]</span>
                            <input type="text" placeholder="ID" required="true" name="ID" value='@ViewData["user"]'/>
                            <span class="alert-danger">@ViewData["Thông báo email"]</span>                            
                            <input type="email" placeholder="Email Address" required="true" name="email" value='@ViewData["email"]'/>                                                      
                            <input type="text" placeholder="Name" required="true" name="name" value='@ViewData["name"]'/>
                            <input type="password" placeholder="Password" required="true" maxlength="15" name="pass" value='@ViewData["pass"]'/>
                            <input type="text" placeholder="Phone" required="true" pattern="[0-9][9-0]" maxlength="15" name="phone" value='@ViewData["phone"]'/>
                            <input type="text" placeholder="Address" required="true" maxlength="100" name="address" value='@ViewData["address"]' />                                                            
                                                                                                                                                                                       
                        </form>
                    <div class="col-lg-12">
                        <div class="row">
                            @if (@ViewData["sex"] != null) 
                            { 
                           
                                if (Equals(@ViewData["sex"], "Nam"))
                                {
                                    <div class="col-lg-3">
                                        <input type="radio" name="sex" value="Nam" form="formSignup" checked required /> Nam
                                    </div>
                                    <div class="col-lg-3">
                                        <input type="radio" name="sex" value="Nữ" form="formSignup" /> Nữ
                                    </div>
                                }
                                else
                                {
                                    <div class="col-lg-3">
                                        <input type="radio" name="sex" value="Nam" form="formSignup" required /> Nam
                                    </div>
                                    <div class="col-lg-3">
                                        <input type="radio" name="sex" value="Nữ" checked form="formSignup" /> Nữ
                                    </div>
                                }   
                            }
                            else
                            {
                                    <div class="col-lg-3">
                                        <input type="radio" name="sex" value="Nam" form="formSignup" required /> Nam
                                    </div>
                                    <div class="col-lg-3">
                                        <input type="radio" name="sex" value="Nữ" form="formSignup" /> Nữ
                                    </div>
                            }
                        </div>
                        
                    </div>
                        <br />
                        <br />
                    <div class="signup-form">
                        <form>
                            <button type="submit" class="btn btn-default" form="formSignup">Submit</button>
                        </form>
                        
                    </div>
                        
                                               
                    </div><!--/sign up form-->
                </div>
            </div>
        </div>
    </section><!--/form-->
</div>


