
@{
    ViewBag.Title = "OrderConfirm";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}

<div class="container" style="background-color:white;">
    <section id="form" style="background-color:white;">
        <div class="container" style="background-color:white;">
            <div class="row">
                <div class="col-lg-12 ">
                    <div class="col-lg-4">

                    </div>
                    <div class="col-lg-4 text-left">
                        <ul class="user_option">
                            <li>
                                <p style="font-size:18px;"><b>Tên khách hàng:</b> @ViewBag.name</p>
                            </li>

                            <li>
                                <p style="font-size:18px;"><b>Địa chỉ:</b> @ViewBag.address</p>
                            </li>

                            <li>
                                <p style="font-size:18px;"><b>Số điện thoại:</b> @ViewBag.phone </p>

                            </li>

                            <li>
                                <p style="font-size:18px;"><b>Mail:</b> @ViewBag.mail</p>

                            </li>
                            <li>
                                <p style="font-size:18px;"><b>Tài Khoản nhận:</b> @Session["Merchant"]</p>

                            </li>
                            <li>
                                <p style="font-size:18px;"><b>Đơn hàng:</b> @Session["OrderInfo"]</p>

                            </li>
                            <li>
                                <p style="font-size:18px;"><b>Tổng tiền:</b> @Session["Amount"]</p>

                            </li>
                            <li>
                                <p style="font-size:18px;"><b>Mã giao dịch:</b> @Session["MerchTxnRef"]</p>

                            </li>
                            <li>
                                <p style="font-size:20px;"><b>Ngày giao dịch:</b> @DateTime.Now.ToShortDateString()</p>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-4">

                    </div>
                </div>
            </div>
            <div class="signup-form">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <p style=" font-size:25px;" class="danger">
                        <br />
                        <b>@ViewData["Thong Bao"]</b>
                        </p>
                    </div>
                    <div class="col-lg-12">
                        <form action="@Url.Action("Homepage", "Homepage")">
                            <button type="submit" class="btn btn-default">Trở về</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>