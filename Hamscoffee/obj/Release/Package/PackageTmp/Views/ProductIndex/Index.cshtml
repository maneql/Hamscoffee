@{
    ViewBag.Title = "HamsIndex";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}

<div class="container" style="padding: 0px;">
    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner">
                            @foreach (var sl in @ViewBag.slider)
                            {
                                if (Equals(@sl.Image_Name, @ViewBag.slider[0].Image_Name))
                                {
                                    <div class="item active">
                                        <div class="col-sm-6">
                                            <h1><span>HC</span>-HamsCoffee</h1>
                                            <h2>@ViewBag.slider[0].Title</h2>
                                            <p>@ViewBag.slider[0].Description </p>
                                            <button type="button" class="btn btn-default get">Get it now</button>
                                        </div>
                                        <div class="col-sm-6">
                                            <img src="~/images/@ViewBag.slider[0].Image_Name" class="girl img-responsive" alt="" />

                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                        <div class="col-sm-6">
                                            <h1><span>HC</span>-HamsCoffee</h1>
                                            <h2>@sl.Title</h2>
                                            <p>@sl.Description</p>
                                            <button type="button" class="btn btn-default get">Get it now</button>
                                        </div>
                                        <div class="col-sm-6">
                                            <img src="~/images/@sl.Image_Name" class="girl img-responsive" alt="" />

                                        </div>
                                    </div>
                                }
                            }
                            
                            

                        </div>

                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </section><!--/slider-->
</div>
